<%= form_for @client do |f| %>
  <%= f.label :client_number %>
  <%= f.text_field :client_number %>
  <%= fields_for :client_profile do |client_profile_fields| %>
    <%= client_profile_fields.label :name %>
    <%= client_profile_fields.text_field :name %>
    <%= client_profile_fields.label :birthdate %>
    <%= client_profile_fields.date_field :birthdate %>
    <%= client_profile_fields.label :phone %>
    <%= client_profile_fields.text_field :phone %>
    <%= client_profile_fields.label :phone_model %>
    <%= client_profile_fields.text_field :phone_model %>
  <% end %>
  <%= f.submit %>
<% end %>
